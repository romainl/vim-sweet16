    # RNB, A VIM COLORSCHEME TEMPLATE

    # This template is designed to help you create your Vim colorscheme
    # with little effort.
    #
    # The only requirement for using this template is Ruby.
    #
    # The process is divided in four steps:
    #   1. start by editing your colorscheme's information,
    #   2. define your colors,
    #   3. define your highlight groups and links,
    #   4. and generate your colorscheme.

    # Step 1: information
    #
    # Make sure the name of your colorscheme is unique and attractive.
    # The description should fit in a single line with no linefeed.
    # 'background' can be "light" or "dark"
    information = {
        author: "Romain Lafourcade",
        email: "romainlafourcade@gmail.com",
        name: "sweet16",
        description: "A 'light' colorscheme using exclusively the lower 16 colors of the xterm palette.",
        background: "light"
    }

    # Step 2: colors
    #
    # black = [       give your color a convenient name
    #   '#000000',    hexadecimal color for GVim/MacVim
    #   0,            integer between 0 and 255 for terminals supporting 256 colors
    #   0             integer between 0 and 15 for terminals limited to 16 colors
    # ]
    #
    # The colors below are the first 16 colors of the xterm palette and
    # are only here as an example. You can get rid of them, I won't be mad.
    black       = ['#000000', 0, 0]
    darkred     = ['#800000', 1, 1]
    darkgreen   = ['#008000', 2, 2]
    darkyellow  = ['#808000', 3, 3]
    darkblue    = ['#000080', 4, 4]
    darkmagenta = ['#800080', 5, 5]
    darkcyan    = ['#008080', 6, 6]
    darkwhite   = ['#c0c0c0', 7, 7]
    gray        = ['#808080', 8, 8]
    red         = ['#ff0000', 9, 9]
    green       = ['#00ff00', 10, 10]
    yellow      = ['#ffff00', 11, 11]
    blue        = ['#0000ff', 12, 12]
    magenta     = ['#ff00ff', 13, 13]
    cyan        = ['#00ffff', 14, 14]
    white       = ['#ffffff', 15, 15]

    # Step 3: highlights
    #
    # You can define an highlight group like this:
    #   [ "Normal",       name of the highlight group
    #     white,          the color used for background color, or use "NONE", "fg" or "bg"
    #     black,          the color used for foreground color, or use "NONE", "fg" or "bg"
    #     "NONE"          style, can be "bold", "underline", "reverse", "italic",
    #                     "standout", "NONE" or "undercurl"
    #   ]
    #
    # or link an highlight group to another:
    #   [ "Title", "Normal" ]
    #
    # You can define an additional color for the undercurl used for
    # highlighting spelling mistakes:
    #   [ "SpellBad",     name of the highlight group
    #     "NONE",         the color used for background color, or use "NONE", "fg" or "bg"
    #     red,            the color used for foreground color, or use "NONE", "fg" or "bg"
    #     "undercurl",    style
    #     red             color used for the undercurl
    #   ]
    #
    # The highlight groups below are fairly standard but some syntax scripts and
    # plugins may define their own. Feel free to append them to this array as needed.
    highlights = [
        [ "Normal", "white", black, "NONE" ],
        [ "NonText", "NONE", darkwhite, "NONE" ],

        [ "Comment", "NONE", gray, "NONE" ],
        [ "Constant", "NONE", darkred, "NONE" ],
        [ "Error", white, red, "reverse" ],
        [ "Identifier", "NONE", darkyellow, "NONE" ],
        [ "Ignore", "NONE", "NONE", "NONE" ],
        [ "PreProc", "NONE", darkblue, "NONE" ],
        [ "Special", "NONE", darkyellow, "NONE" ],
        [ "Statement", "NONE", darkcyan, "NONE" ],
        [ "String", "NONE", darkgreen, "NONE" ],
        [ "Todo", "NONE", "NONE", "reverse" ],
        [ "Type", "NONE", darkmagenta, "NONE" ],
        [ "Underlined", "NONE", white, "underline" ],

        [ "StatusLine", black, white, "NONE" ],
        [ "StatusLineNC", gray, white, "NONE" ],
        [ "VertSplit", gray, gray, "NONE" ],

        [ "TabLine", gray, white, "NONE" ],
        [ "TabLineFill", gray, gray, "NONE" ],
        [ "TabLineSel", black, white, "NONE" ],

        [ "Title", "NONE", magenta, "NONE" ],
        [ "LineNr", "NONE", gray, "NONE" ],

        [ "Cursor", green, black, "NONE" ],
        [ "CursorColumn", white, black, "NONE" ],
        [ "CursorLine", darkwhite, "NONE", "NONE" ],
        [ "CursorLineNr", darkwhite, "NONE", "NONE" ],

        [ "helpLeadBlank", "NONE", "NONE", "NONE" ],
        [ "helpNormal", "NONE", "NONE", "NONE" ],

        [ "Visual", cyan, black, "NONE" ],
        [ "VisualNOS", darkcyan, black, "NONE" ],

        [ "Pmenu", darkwhite, black, "NONE" ],
        [ "PmenuSbar", gray, black, "NONE" ],
        [ "PmenuSel", gray, white, "NONE" ],
        [ "PmenuThumb", black, black, "NONE" ],

        [ "FoldColumn", "NONE", gray, "NONE" ],
        [ "Folded", darkcyan, white, "NONE" ],

        [ "WildMenu", yellow, black, "NONE" ],
        [ "SpecialKey", "NONE", darkwhite, "NONE" ],

        [ "DiffAdd", darkgreen, black, "NONE" ],
        [ "DiffChange", darkcyan, black, "NONE" ],
        [ "DiffDelete", darkred, black, "NONE" ],
        [ "DiffText", cyan, black, "NONE" ],

        [ "IncSearch", white, magenta, "reverse" ],
        [ "Search", yellow, black, "NONE" ],

        [ "Directory", "NONE", darkblue, "NONE" ],
        [ "MatchParen", magenta, black, "NONE" ],

        [ "SpellBad", "NONE", red, "NONE", red ],
        [ "SpellCap", "NONE", blue, "NONE", blue ],
        [ "SpellLocal", "NONE", magenta, "NONE", magenta ],
        [ "SpellRare", "NONE", cyan, "NONE", cyan ],

        [ "ColorColumn", darkwhite, "NONE", "NONE" ],
        [ "signColumn", "NONE", gray, "NONE" ],

        [ "ErrorMsg", red, white, "NONE" ],
        [ "ModeMsg", green, black, "NONE" ],
        [ "MoreMsg", blue , white, "NONE" ],
        [ "Question", white, blue, "NONE" ],
        [ "WarningMsg", magenta, white, "NONE" ]
    ]

    # Step 4: generation
    #
    # From a shell:
    #     $ erb -T - bar.erb > bar.vim
    #
    # From Vim:
    #     :!erb -T - % > %:r.vim

    # These online resources can help you design your colorscheme:
    #   * http://upload.wikimedia.org/wikipedia/en/1/15/Xterm_256color_chart.svg
